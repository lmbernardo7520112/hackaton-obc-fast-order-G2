<div class="card card-primary">
               <div class="card-header">
                <!-- <h3 class="card-title">Quick Example <small>jQuery Validation</small></h3> -->
              </div> 

<!-- form start -->
            
                    <%= form_with(model: order_item) do |f| %>
                    <div class="card-body">
                      <p class="form-group">
                        <%= f.label :Product_Id %>
                        <%= f.text_field :product_id, autofocus: true, class:"form-control" %>
                      </p>
                      <p class="form-group">
                        <%= f.label :Order_Id %>
                        <%= f.text_field :order_id, autofocus: true, class:"form-control" %>
                      </p>
                      <p class="form-group">
                        <%= f.label :Quantity %>
                        <%= f.text_field :quantity, autofocus: true, class:"form-control" %>
                      </p>
                      <p class="form-group">
                        <%= f.label :Description %>
                        <%= f.text_field :description, autofocus: true, class:"form-control" %>
                      </p>
                        <%= f.submit class:'btn btn-primary' %>
                        <!-- <%= link_to 'Cancelar', root_path, class: 'btn btn-default'%> -->
                      </p>
                    <% end %>
                    <!-- <input type="Name" name="Name" class="form-control" id="exampleInputName" placeholder="Name"> -->
                  </div>